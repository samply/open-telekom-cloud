server {
    listen 80;
    server_name ${subdomain}.germanbiobanknode.de;
    include /etc/nginx/conf.d/acme-challenge.global;

    location / {
        resolver 127.0.0.11;
        set $mdr-ui mdr-ui;
        proxy_pass http://mdr-ui:8080/;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
    }

    location /v3 {
        resolver 127.0.0.11;
        set $mdr mdr;
        proxy_pass http://mdr:8080/v3;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
    }
}

server {
    listen 443 ssl http2;
    server_name ${subdomain}.germanbiobanknode.de;

    ssl_certificate     /etc/nginx/ssl/live/${subdomain}.germanbiobanknode.de/fullchain.pem;
    ssl_certificate_key /etc/nginx/ssl/live/${subdomain}.germanbiobanknode.de/privkey.pem;

    location / {
        resolver 127.0.0.11;
        set $mdr-ui mdr-ui;
        proxy_pass http://mdr-ui:8080/;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_set_header X-Forwarded-Proto https;
    }

    location /v3 {
        resolver 127.0.0.11;
        set $mdr mdr;
        proxy_pass http://mdr:8080/v3;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_set_header X-Forwarded-Proto https;
    }
}
