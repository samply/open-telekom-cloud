server {
    listen 80;
    server_name auth.germanbiobanknode.de;
    include /etc/nginx/conf.d/acme-challenge.global;

    location / {
        proxy_pass http://auth:8080/;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
    }
}

server {
    listen 443 ssl http2;
    server_name auth.germanbiobanknode.de;

    ssl_certificate     /etc/nginx/ssl/live/auth.germanbiobanknode.de/fullchain.pem;
    ssl_certificate_key /etc/nginx/ssl/live/auth.germanbiobanknode.de/privkey.pem;

    location / {
        proxy_pass http://auth:8080/;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_set_header X-Forwarded-Proto https;
    }
}
